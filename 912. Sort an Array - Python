class Solution:
    def sortArray(self, nums: List[int]) -> List[int]:

        def mearge(arr, l, m, r):
            left, right = arr[l:m + 1], arr[m + 1:r + 1]
            i = l
            j = k = 0
            while j < len(left) and k < len(right):
                if left[j] <= right[k]:
                    arr[i] = left[j]
                    j += 1
                else:
                    arr[i] = right[k]
                    k += 1
                i += 1

            while j < len(left):
                arr[i] = left[j]
                j += 1
                i += 1
            
            while k < len(right):
                arr[i] = right[k]
                k += 1
                i += 1
        
        def meargeSort(arr, l, r):
            if l == r:
                return arr
            
            m = (l + r) // 2
            meargeSort(arr, l, m)
            meargeSort(arr, m + 1, r)
            mearge(arr, l, m, r)

            return arr

        return meargeSort(nums, 0, len(nums) - 1)
